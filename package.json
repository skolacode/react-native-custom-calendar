{
  "name": "@skolacode/react-native-custom-calendar",
  "version": "0.2.3",
  "license": "MIT",
  "description": "This will be an awesome custom calendar for React Native",
  "homepage": "https://github.com/skolacode/react-native-custom-calendar#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skolacode/react-native-custom-calendar.git"
  },
  "keywords": [
    "react",
    "native",
    "calendar",
    "custom"
  ],

  "react-native": "index.js",
  "main": "index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ]
  },

  "dependencies": {
    "@skolacode/calendar-js": "^1.0.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@react-native-community/bob": "^0.17.1",
    "@types/jest": "^29.2.3",
    "@types/react-native": "0.70.7",
    "@types/react-test-renderer": "^18.0.0",
    "expo": "~47.0.8",
    "expo-splash-screen": "~0.17.5",
    "jest": "^29.3.1",
    "react": "18.1.0",
    "react-native": "0.70.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": false,
  "scripts": {
    "clean": "rm yarn.lock && rm -rf node_modules && yarn cache clean",
    "prepare": "bob build",
    "tsc": "npx tsc",
    "test": "./node_modules/.bin/jest __tests__/index.tsx",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "android-clean": "cd android && ./gradlew clean && cd ..",
    "pod-install": "cd ios && pod install && cd ..",
    "pod-install-m1": "cd ios && arch -x86_64 pod install && cd .."
  }
}
